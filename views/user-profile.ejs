<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" href="/images/header-logo.png">

  <!--Bootstrap Link-->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

  <!-- CSS Links -->
  <link rel="stylesheet" href="../stylesheets/default.css">
  <link rel="stylesheet" href="../stylesheets/profile.css">
  <title>Profile | SciQuiz</title>
</head>
  <body>
    
    <div class="content-wrap">
      <!-- START OF HEADER -->
      <%- include('./includes/header') -%>
      <!-- END OF HEADER -->
      <%- include('./includes/profile-nav') -%>
      <main>
        <div class="user-details-and-login-form">
          <div class="user-details container-m2">
            <div class="title">
              User Details
            </div>
  
            <div class="content">
                <span><strong>Personal Name</strong>: <%= user.firstName + ' ' + user.middleInitial + '. ' + user.lastName %></span>
                <span><strong>Usernam</strong>: <%= user.username %></span>
                <span><strong>Universit</strong>: <%= user.schoolName %></span>
                <span><strong>Cours</strong>: <%= user.course %></span>
                <span><strong>Year Level</strong>: <%= user.yearLevel %></span>
                <div style="border-top: 1px solid black;"></div>
                <span><strong>Total Score</strong>: <%= quizData.totalScore %></span>
                <span><strong>Quiz Take</strong>: <%= quizData.totalQuizTake %></span>
            </div>
          </div>

          <div class="login-form">
            <%- include('./includes/start-game') %>
          </div>
        </div>

        <div class="leader-board-container container-m6">
          <div class="title">
            <h3>SciQuiz Leaderboard</h3>
          </div>
        
          <div class="content">
            <!-- Rank -->
            <div class="rank">
              <div class="column">Rank</div>
              <div class="content-list">
                <% DBQuizzes.forEach((quiz, index) => { %>
                  <div><%= index + 1 %></div>
                <% }) %>
              </div>
            </div>
        
            <!-- Username -->
            <div class="username">
              <div class="column">Username</div>
              <div class="content-list">
                <% DBUsers.forEach(user => { %>
                  <div><%= user.username %></div>
                <% }) %>
              </div>
            </div>
        
            <!-- Total Scores -->
            <div class="total-score">
              <div class="column">Total Scores</div>
              <div class="content-list">
                <% DBQuizzes.forEach(quiz => { %>
                  <div><%= quiz.totalScore %></div>
                <% }) %>
              </div>
            </div>
        
            <!-- Total Quiz Takes -->
            <div class="total-quiz-take">
              <div class="column">#Quiz Take</div>
              <div class="content-list">
                <% DBQuizzes.forEach(quiz => { %>
                  <div><%= quiz.totalQuizTake %></div>
                <% }) %>
              </div>
            </div>
          </div>
        </div>
      </main>

      
    </div>
    
    <!-- START OF FOOTER -->
    <footer>
      <%- include('./includes/footer') -%>
    </footer>
    <!-- END OF FOOTER -->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>