<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" href="/images/header-logo.png">

  <!--Bootstrap Link-->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

  <!-- CSS Links -->
   <link rel="stylesheet" href="/stylesheets/default.css">
</head>
  <body>

        <div class="review-results-container">
          <div class="score-container">
            Your score: <%= score %>/<%= totalQuestions %>
          </div>

          <div class="result-container"> 
            <% results.forEach((reviewResults, index) => { %>
              <div class="result-content-container">
                <span>
                  <span class="question-number">
                    <strong>Question <%= index + 1 %>:</strong>
                  </span> <%= reviewResults.question %>
                </span>
              
                <% if(reviewResults.userAnswer.trim().toLowerCase() === reviewResults.correctAnswer.trim().toLowerCase()) { %>
                  <p style="border: 3px solid rgb(11, 185, 11);
                            padding-left: 10px;
                            margin-top: 5px;
                            margin-bottom: 5px;
                            font-size: 14px;
                            font-weight: bold;
                            border-radius: 10px;"><span >User Answer:</span> <%= reviewResults.userAnswer %> 
                            <i class="bi bi-check2" style="font-weight: bold; 
                                                          font-size: 14px; 
                                                          font-weight: bold;
                                                          margin-left: 1rem;
                                                          color: rgb(11, 185, 11);"></i></p>
                <% } else { %>
                  <p style="border: 3px solid red;
                            padding-left: 10px;
                            font-size: 14px;
                            margin-top: 5px;
                            margin-bottom: 5px;
                            font-weight: bold;
                            border-radius: 10px;"><span>User Answer:</span> <%= reviewResults.userAnswer %> 
                            <i style="font-weight: bold; 
                                                          font-size: 15px; 
                                                          font-weight: bold;
                                                          margin-left: 1rem;
                                                          color: red;">X</i></p>
                <% } %>
                  <span class="correct-answer">
                    <strong>Correct Answer:</strong>
                  </span> <%= reviewResults.correctAnswer %>
              </div>
            <% }) %>
          </div>

          <div class="back-button">
            <a href="/start-game">
              <button type="button" class="btn btn-primary">
                Quiz Again
              </button>
            </a>
          </div>
        </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
