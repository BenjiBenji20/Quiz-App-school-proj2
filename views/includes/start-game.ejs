<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" href="/images/header-logo.png">

  <!--Bootstrap Link-->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

  <!-- CSS Links -->
  <link rel="stylesheet" href="/stylesheets/default.css">
  
</head>
  <body>

      <form action="/fetch-data" method="POST" class="start-game-form">
        <div class="start-game-form-title">SciQuiz</div>
        <div class="form-input-container">
          <div class="select-difficulty-container">
            <label for="difficulty">DIFFICULTY OF QUESTIONS</label>
            <select class="form-select" aria-label="Default select example" id="select-difficulty" name="difficulty" required>
              <% difficulty.forEach(difficulties => { %>
                <option value="<%= difficulties.value %>"><%= difficulties.name %></option>
              <% }); %>
            </select>
          </div>

          <div class="select-type-container">
            <label for="difficulty">TYPE OF QUESTIONS</label>
            <select class="form-select" aria-label="Default select example" id="select-type" name="type" required>
              <% type.forEach(types => { %>
                <option value="<%= types.value %>"><%= types.name %></option>
              <% }); %>
            </select>
          </div>
        </div>

        <!-- track if the user take a quiz without account -->

        <div class="select-difficulty-type-button">
          <button type="submit" class="btn btn-success">QUIZ START!</button>
        </div>
      </form>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>